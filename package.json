{
  "name": "copilot-pro",
  "productName": "Copilot Pro",
  "version": "1.0.0",
  "description": "Advanced Offline AI Copilot Pro - Professional Grade AI Coding Assistant",
  "main": "electron.js",
  "homepage": "https://github.com/SpidermanTotro/AgentFoundry-instantly",
  "author": {
    "name": "Copilot Pro Team",
    "email": "support@copilotpro.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SpidermanTotro/AgentFoundry-instantly.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run server\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder -mwl",
    "docker:build": "docker build -t copilot-pro:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "build": {
    "appId": "com.copilotpro.app",
    "productName": "Copilot Pro",
    "copyright": "Copyright Â© 2024 Copilot Pro Team",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "server/**/*",
      "public/**/*",
      "electron.js",
      "preload.js",
      "package.json",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "server/ai-engine",
        "to": "server/ai-engine",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Development",
      "icon": "public/icon.png",
      "desktop": {
        "Name": "Copilot Pro",
        "Comment": "Advanced Offline AI Coding Assistant",
        "Categories": "Development;IDE;",
        "Keywords": "code;programming;ai;copilot;"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Copilot Pro"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Copilot Pro ${version}",
      "icon": "public/icon.icns"
    },
    "publish": {
      "provider": "github",
      "owner": "SpidermanTotro",
      "repo": "AgentFoundry-instantly"
    }
  },
  "keywords": [
    "ai",
    "copilot",
    "code-assistant",
    "programming",
    "offline",
    "ide",
    "development",
    "code-intelligence",
    "refactoring",
    "code-analysis"
  ],
  "dependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@google/generative-ai": "^0.24.1",
    "@monaco-editor/react": "^4.7.0",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "@xenova/transformers": "^2.17.2",
    "acorn": "^8.15.0",
    "ai": "^5.0.106",
    "anthropic": "^0.0.0",
    "ast-types": "^0.16.1",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "body-parser": "^2.2.1",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "chokidar": "^5.0.0",
    "codemirror": "^6.0.2",
    "cohere": "^1.1.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "esprima": "^4.0.1",
    "express": "^5.2.1",
    "fast-glob": "^3.3.3",
    "ffmpeg-static": "^5.3.0",
    "glob": "^13.0.0",
    "highlight.js": "^11.11.1",
    "jscodeshift": "^17.3.0",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.1.0",
    "monaco-themes": "^0.4.7",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "openai": "^6.10.0",
    "openai-edge": "^1.2.2",
    "pdf-parse": "^2.4.5",
    "prettier": "^3.7.4",
    "puppeteer": "^24.32.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recast": "^0.23.11",
    "replicate": "^1.4.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7",
    "tree-sitter": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0",
    "typescript-parser": "^2.6.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "vite": "^7.2.6"
  }
}
