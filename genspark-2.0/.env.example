# GenSpark 2.0 Unified - Environment Configuration
# Copy this file to .env and configure as needed

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# ============================================================================
# AI ENGINE CONFIGURATION
# ============================================================================

# AI Mode: offline, online, hybrid
AI_MODE=hybrid

# Enable/disable specific AI engines
ENABLE_LOCAL_AI=true
ENABLE_GENSPARK_AI=true
ENABLE_CODE_INTELLIGENCE=true
ENABLE_PLUGIN_SYSTEM=true

# Fallback configuration
FALLBACK_ENABLED=true
CACHE_ENABLED=true

# ============================================================================
# ONLINE AI PROVIDERS (Optional - for online/hybrid mode)
# ============================================================================

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cohere
COHERE_API_KEY=your_cohere_api_key_here

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# AUTHENTICATION (Optional - for multi-user mode)
# ============================================================================
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d
API_KEY_PREFIX=sk-genspark-

# ============================================================================
# VECTOR DATABASE (Optional - for RAG features)
# ============================================================================
VECTORDB_PATH=./data/vectordb
VECTORDB_DIMENSION=384
ENABLE_RAG=true

# ============================================================================
# MEDIA GENERATION
# ============================================================================

# Image generation
IMAGE_GEN_MODEL=stable-diffusion
IMAGE_MAX_SIZE=2048

# Video generation
VIDEO_MAX_DURATION=30
VIDEO_MAX_FPS=30

# Audio generation
AUDIO_MAX_DURATION=300

# GIF creation
GIF_MAX_FRAMES=100
GIF_OPTIMIZE=true

# ============================================================================
# WORKSPACE FEATURES
# ============================================================================
WORKSPACE_STORAGE_PATH=./data/workspace
MAX_FILE_SIZE=100mb

# ============================================================================
# CODE INTELLIGENCE
# ============================================================================
CODE_ANALYSIS_DEPTH=deep
ENABLE_SECURITY_SCAN=true
ENABLE_PERFORMANCE_TIPS=true

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/genspark.log

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_WORKSPACE=true
ENABLE_MEDIA_GEN=true
ENABLE_CODE_ASSISTANT=true
ENABLE_CHAT=true
ENABLE_UNRESTRICTED_MODE=true

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
CACHE_SIZE=100mb

# ============================================================================
# DEVELOPMENT
# ============================================================================
DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true
