{
  "name": "genspark-2.0",
  "version": "2.0.0",
  "description": "GenSpark 2.0 - Complete Offline AI Platform with ALL Features",
  "main": "electron/main.js",
  "author": "GenSpark Team",
  "license": "MIT",
  "homepage": "https://github.com/genspark/genspark-2.0",
  "scripts": {
    "start": "node src/server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:appimage": "npm run build && electron-builder --linux AppImage",
    "electron:build:deb": "npm run build && electron-builder --linux deb",
    "electron:build:rpm": "npm run build && electron-builder --linux rpm",
    "electron:build:all": "npm run build && electron-builder --linux AppImage deb rpm"
  },
  "build": {
    "appId": "com.genspark.v2",
    "productName": "GenSpark 2.0",
    "copyright": "Copyright Â© 2024 GenSpark Team",
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/server.js",
      "src/ai/**/*",
      "src/workspace/**/*",
      "src/media/**/*",
      "src/offline/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "public/icon.png",
      "maintainer": "GenSpark Team",
      "synopsis": "Complete Offline AI Platform",
      "description": "GenSpark 2.0 - AI Workspace, Media Generation, Code Completion, and More"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5",
    "@huggingface/inference": "^2.6.4",
    "sharp": "^0.33.0",
    "canvas": "^2.11.2",
    "gifencoder": "^2.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "wavefile": "^11.0.0",
    "pdfkit": "^0.13.0",
    "markdown-it": "^13.0.2",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "html-to-image": "^1.11.11"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
