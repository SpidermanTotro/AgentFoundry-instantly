# ============================================
# ChatGPT 2.0 UNRESTRICTED - API Configuration
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=development
DEV_MODE=true

# ============================================
# AI PROVIDERS (Required for AI responses)
# ============================================

# Google AI (Gemini) - https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_key_here

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT-4, DALL-E) - https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# ============================================
# IMAGE & VIDEO GENERATION
# ============================================

# Replicate (Stable Diffusion, Video models) - https://replicate.com/account/api-tokens
REPLICATE_API_KEY=your_replicate_key_here

# Stability AI (Stable Diffusion) - https://platform.stability.ai/
STABILITY_API_KEY=your_stability_key_here

# ============================================
# AUDIO & MUSIC GENERATION
# ============================================

# ElevenLabs (Voice synthesis, TTS) - https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Suno AI (Music generation) - https://www.suno.ai/
SUNO_API_KEY=your_suno_key_here

# ============================================
# WEB SEARCH & BROWSING
# ============================================

# SERP API (Google Search) - https://serpapi.com/
SERP_API_KEY=your_serp_api_key_here

# Brave Search API - https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# ============================================
# DOCUMENT PROCESSING
# ============================================

# OCR Space (Document OCR) - https://ocr.space/ocrapi
OCR_SPACE_API_KEY=your_ocr_space_key_here

# ============================================
# VECTOR DATABASE & MEMORY
# ============================================

# Pinecone (Vector DB) - https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX=chatgpt2-memory

# ============================================
# GITHUB INTEGRATION
# ============================================

# GitHub Personal Access Token - https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ============================================
# AUTHENTICATION (Optional)
# ============================================

# JWT Secret for user authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Session secret
SESSION_SECRET=your_session_secret_here

# ============================================
# FEATURES TOGGLES
# ============================================

ENABLE_WEB_BROWSING=true
ENABLE_CODE_EXECUTION=true
ENABLE_FILE_SYSTEM=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_OFFLINE_MODE=true
ENABLE_RESTRICTIONS=false

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# STORAGE & CACHE
# ============================================

STORAGE_PATH=./data
CACHE_PATH=./cache
MAX_FILE_SIZE_MB=100
MAX_CONVERSATION_LENGTH=100

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================

ENABLE_WEBSOCKET=true
WEBSOCKET_PORT=3002
CORS_ORIGIN=http://localhost:3000

